<Bindings>
  <!-- Toggle options -->
  <Binding name="DEJUNK_TOGGLE_OPTIONS" header="DEJUNK_HEADER_GENERAL" category="BINDING_CATEGORY_DEJUNK">
    DejunkBindings_ToggleOptions()
  </Binding>

  <!-- Start selling -->
  <Binding name="DEJUNK_START_SELLING" category="BINDING_CATEGORY_DEJUNK">
    DejunkBindings_StartSelling()
  </Binding>

  <!-- Start destroying -->
  <Binding name="DEJUNK_START_DESTROYING" category="BINDING_CATEGORY_DEJUNK">
    DejunkBindings_StartDestroying()
  </Binding>

  <!-- Open lootables -->
  <Binding name="DEJUNK_OPEN_LOOTABLES" category="BINDING_CATEGORY_DEJUNK">
    DejunkBindings_OpenLootables()
  </Binding>

  <!-- Add/rem sell inclusions -->
  <Binding name="DEJUNK_ADD_INCLUSIONS" header="DEJUNK_HEADER_SELL" category="BINDING_CATEGORY_DEJUNK">
    DejunkBindings_AddToList("sell", "inclusions")
  </Binding>
  <Binding name="DEJUNK_REM_INCLUSIONS" category="BINDING_CATEGORY_DEJUNK">
    DejunkBindings_RemoveFromList("sell", "inclusions")
  </Binding>

  <!-- Add/rem sell exclusions -->
  <Binding name="DEJUNK_ADD_EXCLUSIONS" category="BINDING_CATEGORY_DEJUNK">
    DejunkBindings_AddToList("sell", "exclusions")
  </Binding>
  <Binding name="DEJUNK_REM_EXCLUSIONS" category="BINDING_CATEGORY_DEJUNK">
    DejunkBindings_RemoveFromList("sell", "exclusions")
  </Binding>

  <!-- Add/rem destroy inclusions -->
  <Binding name="DEJUNK_ADD_DESTROYABLES" header="DEJUNK_HEADER_DESTROY" category="BINDING_CATEGORY_DEJUNK">
    DejunkBindings_AddToList("destroy", "inclusions")
  </Binding>
  <Binding name="DEJUNK_REM_DESTROYABLES" category="BINDING_CATEGORY_DEJUNK">
    DejunkBindings_RemoveFromList("destroy", "inclusions")
  </Binding>

  <!-- Add/rem destroy exclusions -->
  <Binding name="DEJUNK_ADD_UNDESTROYABLES" category="BINDING_CATEGORY_DEJUNK">
    DejunkBindings_AddToList("destroy", "exclusions")
  </Binding>
  <Binding name="DEJUNK_REM_UNDESTROYABLES" category="BINDING_CATEGORY_DEJUNK">
    DejunkBindings_RemoveFromList("destroy", "exclusions")
  </Binding>
</Bindings>
